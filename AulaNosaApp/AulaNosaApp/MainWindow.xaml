<Window x:Class="AulaNosaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AulaNosaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000" MinHeight="650" MinWidth="1000">

    <Window.Resources>
        <Style x:Key="BotonesMenuIzqda" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1A17A1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="BotonesBarraSuperior" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="60"/>
        </Style>
        <Style x:Key="BotonesLogin" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style x:Key="LabelTitulosMenuIzqda" TargetType="Label">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
        <Style x:Key="TextBlockLogin" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style x:Key="TextBoxLogin" TargetType="TextBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PasswordBoxLogin" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,35"/>
        </Style>
        <Style x:Key="MargenAbajoStackPanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="BotonesCentrados" TargetType="StackPanel">
            <Setter Property="Margin" Value="25,0,0,0"/>
        </Style>
        <Style x:Key="ImagenesIconosMenuSup" TargetType="Image">
            <Setter Property="Width" Value="25"/>
        </Style>
        <Style x:Key="ComboBoxPantallaPrincipal" TargetType="ComboBox">
            <Setter Property="SelectedIndex" Value="0"/>
        </Style>
        <Style x:Key="StackPanelBotonesMenuSup" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel x:Name="spnMenuIzqda" DockPanel.Dock="Left" Background="#1A17A1" Width="200">
            <StackPanel Margin="5">
                <ComboBox Name="cbEstudios" SelectedIndex="0">
                    <ComboBoxItem>Grado Básico</ComboBoxItem>
                    <ComboBoxItem>Ciclo Medio</ComboBoxItem>
                    <ComboBoxItem>Ciclo Superior</ComboBoxItem>
                    <ComboBoxItem>AFD</ComboBoxItem>
                    <ComboBoxItem>Máster Profesorado</ComboBoxItem>
                    <ComboBoxItem>Otros externos</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel x:Name="spnAdmin" Style="{StaticResource MargenAbajoStackPanel}">
                <Label x:Name="lblAdministracion" Content="ADMINISTRACIÓN" Style="{StaticResource LabelTitulosMenuIzqda}"/>
                <StackPanel Style="{StaticResource BotonesCentrados}">
                    <Button x:Name="btnUsuarios" Content="Usuarios" Style="{StaticResource BotonesMenuIzqda}" Click="btnUsuarios_Click"/>
                    <Button x:Name="btnCursos" Content="Cursos" Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnEstudios" Content="Estudios" Style="{StaticResource BotonesMenuIzqda}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="spnFCT" Style="{StaticResource MargenAbajoStackPanel}">
                <Label x:Name="lblFCT" Content="GESTIÓN FCT" Style="{StaticResource LabelTitulosMenuIzqda}"/>
                <StackPanel Style="{StaticResource BotonesCentrados}">
                    <Button x:Name="btnEmpresas" Content="Empresas" Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnAlumnado" Content="Alumnado"  Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnCalendarioFct" Content="Calendario"  Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnAlumnoEmpresa" Content="Alumno - Empresa"  Style="{StaticResource BotonesMenuIzqda}" Click="btnAlumnoEmpresa_Click"/>
                    <Button x:Name="btnEmpresaAlumnos" Content="Empresa - Alumnos"  Style="{StaticResource BotonesMenuIzqda}" Click="btnEmpresaAlumnos_Click"/>
                    <Button x:Name="btnInformes" Content="Informes"  Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnTutorias" Content="Tutorías"  Style="{StaticResource BotonesMenuIzqda}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="spnPFC" Style="{StaticResource MargenAbajoStackPanel}">
                <Label x:Name="lblPFC" Content="GESTIÓN PFC" Style="{StaticResource LabelTitulosMenuIzqda}"/>
                <StackPanel Style="{StaticResource BotonesCentrados}">
                    <Button x:Name="btnProyectos" Content="Proyectos" Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnNotas" Content="Notas" Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnExposiciones" Content="Exposiciones" Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnInfo" Content="Info" Style="{StaticResource BotonesMenuIzqda}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="spnPEXT" Style="{StaticResource MargenAbajoStackPanel}">
                <Label x:Name="lblPEXT" Content="GESTIÓN PEXT" Style="{StaticResource LabelTitulosMenuIzqda}"/>
                <StackPanel Style="{StaticResource BotonesCentrados}">
                    <Button x:Name="btnAlumnadoExterno" Content="Alumnado Externo" Style="{StaticResource BotonesMenuIzqda}"/>
                    <Button x:Name="btnCalendarioPext" Content="Calendario" Style="{StaticResource BotonesMenuIzqda}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Grid x:Name="grdMenuSuperior" DockPanel.Dock="Top" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Source="/Imagenes/aulanosa_logo.png" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
            <WrapPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="btnInicio" Style="{StaticResource BotonesBarraSuperior}">
                    <StackPanel  Orientation="Vertical">
                        <Image Source="/Imagenes/home_icon.png" Width="25"/>
                        <TextBlock Text="Inicio"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnMensajeria" Style="{StaticResource BotonesBarraSuperior}">
                    <StackPanel  Orientation="Vertical">
                        <Image Source="/Imagenes/message_icon.png" Width="25"/>
                        <TextBlock Text="Mensajería"/>
                    </StackPanel>
                </Button>
                <ComboBox x:Name="cbbUsuario" SelectedIndex="0">
                    <ComboBoxItem Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Imagenes/user_icon.png" Width="45"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Name="txbNombreUsuarioLogueado" Text="Nombre" FontSize="15" FontWeight="DemiBold"/>
                                <TextBlock Name="txbRolUsuarioLogueado" Text="Categoría"/>
                            </StackPanel>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem Selected="ComboBoxItem_Selected">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Imagenes/user_icon.png" Width="45"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Cerrar Sesion" FontSize="15" FontWeight="DemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
            </WrapPanel>
        </Grid>
        <Grid>
            <StackPanel Name="spnAcceso" Width="350" Height="350"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/Imagenes/aulanosa_logo.png" Width="100" Margin="0,0,0,15"/>
                <TextBlock Text="Usuario" HorizontalAlignment="Center" Style="{StaticResource TextBlockLogin}"/>
                <TextBox Text="Hugo" Name="tbUsuario" Style="{StaticResource TextBoxLogin}"/>
                <TextBlock Text="Contraseña" HorizontalAlignment="Center" Style="{StaticResource TextBlockLogin}"/>
                <PasswordBox Password="prueba" Name="tbContrasena" Style="{StaticResource PasswordBoxLogin}"/>
                <Button Name="btnAcceder" Content="Acceder" HorizontalAlignment="Center" Style="{StaticResource BotonesLogin}" Click="btnAcceder_Click"/>
                <TextBlock Name="tbError" Text="" HorizontalAlignment="Center" Foreground="DarkRed" FontWeight="Bold"/>
            </StackPanel>
            <Frame x:Name="frmPrincipal"/>
        </Grid>
    </DockPanel>
</Window>
