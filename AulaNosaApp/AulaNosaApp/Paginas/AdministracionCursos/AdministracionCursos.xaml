<Page x:Class="AulaNosaApp.AdministracionCursos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AulaNosaApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdministracionCursos">

    <Page.Resources>
        <Style x:Key="BgColorStackPanelAdm" TargetType="StackPanel">
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="TextBlockTituloAdm" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="30"/>
            
        </Style>

    </Page.Resources>

    <StackPanel Background="White">
        <TextBlock Name="tbkTitulo" Text="Administración de cursos" HorizontalAlignment="Center" Foreground="Blue" FontSize="30" FontWeight="Bold"/>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <ToolBar Name="tbrDatos" Height="40">
                    <Grid Width="500">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Margin="3" Name="btnRefrescar" Content="Refrescar" Click="btnRefrescar_Click"/>
                        <Button Grid.Column="1" Margin="3" Name="btnNuevo" Content="Nuevo" Click="btnNuevo_Click"/>
                        <Button Grid.Column="2" Margin="3" Name="btnModificar" Content="Editar" IsEnabled="False" Click="btnModificar_Click"/>
                        <Button Grid.Column="3" Margin="3" Name="btnEliminar" Content="Eliminar" IsEnabled="False" Click="btnEliminar_Click"/>
                        <Button Grid.Column="4" Margin="3" Name="btnConsultar" Content="Consultar" Click="btnConsultar_Click"/>
                        <ComboBox Grid.Column="5" Margin="3" Name="cmbConsultar" Visibility="Hidden"/>
                        <TextBox Grid.Column="6" Margin="3" Name="tbxConsultar" Visibility="Hidden"/>
                        <Button Grid.Column="7" Margin="3" Name="btnBuscar" Content="Buscar" Visibility="Hidden" Click="btnBuscar_Click"/>
                    </Grid>
                </ToolBar>
            </DockPanel>

            <DataGrid Grid.Row="1" Name="dtgListado" SelectionMode="Single" IsReadOnly="true" AutoGenerateColumns="False" DataGridCell.Selected="dtgListado_Selected">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding id}"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}"/>
                    <DataGridTextColumn Header="Inicio" Binding="{Binding inicio}"/>
                    <DataGridTextColumn Header="Fin" Binding="{Binding fin}"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding estado}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</Page>