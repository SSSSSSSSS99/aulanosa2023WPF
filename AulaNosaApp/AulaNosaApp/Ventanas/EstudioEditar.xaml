<Window x:Class="AulaNosaApp.Ventanas.EstudioEditar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AulaNosaApp.Ventanas"
        mc:Ignorable="d"
        Title="EstudioEditar" Height="300" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="Editar Estudio" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Margin="0,0,0,15"/>
            <WrapPanel HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="Id" TextAlignment="Right" Margin="10,0,10,0"/>
                <TextBlock x:Name="tbId"  Margin="0,0,435,0"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="Nombre" TextAlignment="Right" Margin="10,0,10,0"/>
                <TextBox x:Name="tbNombre" Width="200" Margin="0,0,235,0"/>
            </WrapPanel>
            <WrapPanel  HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="FCT" TextAlignment="Right" Margin="10,0,10,0"/>
                <CheckBox x:Name="cbFct" Margin="0,0,420,0"/>
            </WrapPanel>
            <WrapPanel  HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="PEXT" TextAlignment="Right" Margin="10,0,10,0"/>
                <CheckBox x:Name="cbPext" Margin="0,0,420,0"/>
            </WrapPanel>
            <TextBlock x:Name="tbErrores" Foreground="Red" FontWeight="Bold" Visibility="Hidden"/>
        </StackPanel>
        <Button Content="Aceptar" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Click="Aceptar"/>
        <Button Content="Cancelar" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20" Click="Cancelar"/>
    </Grid>
</Window>
